extends layout

block content
    .card.bg-light
        article.card-body.mx-auto(style='max-width: 400px;')
            h4.card-title.mb-4.mt-1 Publish photo
            hr
            form(action="/home/foto" method="POST" enctype="multipart/form-data")
                .form-group
                    input.form-control(name="photo" type="file")
                .form-group
                    input.form-control(name="desc" type="text" placeholder="descricao")
                .form-group
                    input.form-control(name="publica" type="checkbox")
                .input_fields_wrap.form-group
                    button.add_field_button Add More Fields
                    .form-group
                        input.form-control(type='text', name='tags[]')
                .form-group
                    input.btn.btn-primary.btn-block(type="submit" value="Create")

block scripts
    script(src="/js/script.js")